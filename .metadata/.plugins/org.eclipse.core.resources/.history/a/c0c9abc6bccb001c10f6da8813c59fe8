package sprite;

import java.awt.Color;
import java.awt.Graphics2D;
import java.io.IOException;

import javax.imageio.ImageIO;

import application.GamePanel;
import application.KeyHandler;

public class Player extends Sprite {
	GamePanel gamePanel;
	KeyHandler keyHandler;
	
	public Player(GamePanel gamePanel, KeyHandler keyHandler) {
		this.gamePanel = gamePanel;
		this.keyHandler = keyHandler;
		x = 100;
		y = 100;
		speed = 4;
	}
	
	public void getPlayerImage(String fileName) {
		try {
			up1 = ImageIO.read(getClass().getResourceAsStream(fileName));
			up2 = ImageIO.read(getClass().getResourceAsStream(fileName));
			up3 = ImageIO.read(getClass().getResourceAsStream(fileName));
			down1 = ImageIO.read(getClass().getResourceAsStream(fileName));
			down2 = ImageIO.read(getClass().getResourceAsStream(fileName));
			down3 = ImageIO.read(getClass().getResourceAsStream(fileName));
			left1 = ImageIO.read(getClass().getResourceAsStream(fileName));
			left2 = ImageIO.read(getClass().getResourceAsStream(fileName));
			left3 = ImageIO.read(getClass().getResourceAsStream(fileName));
			right1 = ImageIO.read(getClass().getResourceAsStream(fileName));
			right2 = ImageIO.read(getClass().getResourceAsStream(fileName));
			right3 = ImageIO.read(getClass().getResourceAsStream(fileName));
		} catch(IOException e) {
			e.printStackTrace();
		}
	}
	
	public void update() {
		
	}
	
	public void draw(Graphics2D g2) {
		g2.setColor(Color.white);	
		g2.fillRect(x, y, this.gamePanel.getTileSize(), this.gamePanel.getTileSize());
	}
}
