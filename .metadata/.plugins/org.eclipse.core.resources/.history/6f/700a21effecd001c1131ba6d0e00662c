package map;

import java.awt.Graphics2D;
import java.io.IOException;

import application.GamePanel;

public class TileManager {
	GamePanel gamePanel;
	Tile[] tileTypes;
	
	public TileManager(GamePanel gamePanel) {
		this.gamePanel = gamePanel;
		tileTypes = new Tile[11];
		for(int i = 0; i < tileTypes.length; i++) {
			tileTypes[i] = new Tile();
		}
	}
	
	public void getTileImage() {
		tileTypes[0].setImage("/tiles/Parquet.png");
		//tileTypes[1].setImage("/tiles/");
		tileTypes[2].setImage("/tiles/Terra.png");
		tileTypes[3].setImage("/tiles/Asfalto.png");
		tileTypes[4].setImage("/tiles/Strisce.png");
		tileTypes[5].setImage("/tiles/Mattonelle.png");
		tileTypes[6].setImage("/tiles/scale_dx_su.png");
		tileTypes[7].setImage("/tiles/scale_dx_giù.png");
		tileTypes[8].setImage("/tiles/Entrata_sx_giu.png");
		tileTypes[9].setImage("/tiles/Entrata_dx_giu.png");
		tileTypes[10].setImage("/tiles/Entrata_sx_su.png");
		tileTypes[11].setImage("/tiles/Entrata_dx_su.png");
	}
	
	public void draw(Graphics2D g2) {
		g2.drawImage(tileTypes[0].getImage(), 0, 0, gamePanel.getTileSize(), gamePanel.getTileSize(), null);
	}
}
