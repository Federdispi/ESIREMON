package map;

import java.awt.Graphics2D;
import java.io.IOException;

import javax.imageio.ImageIO;

import application.GamePanel;

public class TileManager {
	GamePanel gamePanel;
	Tile[] tileTypes;
	
	public TileManager(GamePanel gamePanel) {
		this.gamePanel = gamePanel;
		tileTypes = new Tile[11];
		for(int i = 0; i < tileTypes.length; i++) {
			tileTypes[i] = new Tile();
		}
		getTileImage();
	}
	
	public void getTileImage() {
		try {
			tileTypes[0].image = ImageIO.read(getClass().getResourceAsStream("/tiles/Parquet.png"));
			//tileTypes[1].image = ImageIO.read(getClass().getResourceAsStream("/tiles/.png"));
			tileTypes[0].image = ImageIO.read(getClass().getResourceAsStream("/tiles/Terra.png"));
			tileTypes[0].image = ImageIO.read(getClass().getResourceAsStream("/tiles/Asfalto.png"));
			tileTypes[0].image = ImageIO.read(getClass().getResourceAsStream("/tiles/Strisce.png"));
			tileTypes[0].image = ImageIO.read(getClass().getResourceAsStream("/tiles/Mattonelle.png"));
			tileTypes[0].image = ImageIO.read(getClass().getResourceAsStream("/tiles/scale_dx_su.png"));
			tileTypes[0].image = ImageIO.read(getClass().getResourceAsStream("/tiles/scale_dx_giù.png"));
			tileTypes[0].image = ImageIO.read(getClass().getResourceAsStream("/tiles/Entrata_sx_giu.png"));
			tileTypes[0].image = ImageIO.read(getClass().getResourceAsStream("/tiles/Entrata_dx_giu.png"));
			tileTypes[0].image = ImageIO.read(getClass().getResourceAsStream("/tiles/Entrata_sx_su.png"));
			tileTypes[0].image = ImageIO.read(getClass().getResourceAsStream("/tiles/Entrata_dx_su.png"));
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	public void draw(Graphics2D g2) {
		g2.drawImage(tileTypes[0].image, 0, 0, gamePanel.getTileSize(), gamePanel.getTileSize(), null);
	}
}
