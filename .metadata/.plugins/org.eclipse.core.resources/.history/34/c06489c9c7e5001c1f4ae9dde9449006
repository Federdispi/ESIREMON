package application;

import java.awt.Color;
import java.awt.Font;
import java.awt.Graphics2D;

public class HUD {
	
	GamePanel gamePanel;
	Font arial32;
	Graphics2D g2;
	
	public HUD(GamePanel gamePanel) {
		this.gamePanel = gamePanel;
		arial32 = new Font("Arial", Font.PLAIN, 32);
	}
	
	public void draw(Graphics2D g2) {
		g2.setFont(arial32);
		g2.setColor(Color.white);
		g2.drawString("HP: " + gamePanel.player.getLifePoints() , 25, 50);
	}
	
	public void dialogue() {
		int x = 2 * gamePanel.getTileSize(); 
		int y = 14 * gamePanel.getTileSize();
		int width = gamePanel.getScreenWidth() - 4 * gamePanel.getTileSize();
		int height = 3 * gamePanel.getTileSize();
		
		drawWindow(x, y, width, height);
	}
	
	public void drawWindow(int x, int y, int width, int height) {
		g2.
	}

}
